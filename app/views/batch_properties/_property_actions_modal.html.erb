<!-- Property Actions Modal -->
<div data-batch-properties-target="modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 items-center justify-center p-4 hidden">
  <div class="bg-white rounded-3xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
    <!-- Modal Header -->
    <div class="px-8 py-6 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-purple-50">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-xl font-semibold text-gray-900" data-batch-properties-target="modalTitle">Property Actions</h3>
          <p class="text-sm text-gray-600 mt-1" data-batch-properties-target="modalSubtitle">Choose an action for this property</p>
        </div>
        <button type="button"
                data-action="click->batch-properties#closeModal"
                class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Modal Content -->
    <div class="p-8 overflow-y-auto max-h-[calc(90vh-140px)]">
      <div id="modalContent">
        <!-- Property Actions Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
          <!-- View Property -->
          <button type="button"
                  data-batch-properties-target="viewPropertyBtn"
                  data-action="click->batch-properties#viewProperty"
                  class="flex items-center p-4 border-2 border-gray-200 rounded-xl hover:border-blue-300 hover:bg-blue-50 transition-all duration-200 group">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center group-hover:bg-blue-200 transition-colors duration-200">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 text-left">
              <h4 class="text-sm font-medium text-gray-900">View Property</h4>
              <p class="text-xs text-gray-500">Open property details page</p>
            </div>
          </button>

          <!-- Edit Property -->
          <button type="button"
                  data-batch-properties-target="editPropertyBtn"
                  data-action="click->batch-properties#editProperty"
                  class="flex items-center p-4 border-2 border-gray-200 rounded-xl hover:border-green-300 hover:bg-green-50 transition-all duration-200 group">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center group-hover:bg-green-200 transition-colors duration-200">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 text-left">
              <h4 class="text-sm font-medium text-gray-900">Edit Property</h4>
              <p class="text-xs text-gray-500">Modify property details</p>
            </div>
          </button>

          <!-- Retry Item -->
          <button type="button"
                  data-batch-properties-target="retryItemBtn"
                  data-action="click->batch-properties#retryItem"
                  class="flex items-center p-4 border-2 border-gray-200 rounded-xl hover:border-orange-300 hover:bg-orange-50 transition-all duration-200 group">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center group-hover:bg-orange-200 transition-colors duration-200">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 text-left">
              <h4 class="text-sm font-medium text-gray-900">Retry Processing</h4>
              <p class="text-xs text-gray-500">Retry failed property creation</p>
            </div>
          </button>

          <!-- View Details -->
          <button type="button"
                  data-action="click->batch-properties#viewDetails"
                  class="flex items-center p-4 border-2 border-gray-200 rounded-xl hover:border-purple-300 hover:bg-purple-50 transition-all duration-200 group">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center group-hover:bg-purple-200 transition-colors duration-200">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 text-left">
              <h4 class="text-sm font-medium text-gray-900">View Details</h4>
              <p class="text-xs text-gray-500">See property data and errors</p>
            </div>
          </button>
        </div>

        <!-- Property Details Section -->
        <div data-batch-properties-target="propertyDetails" class="hidden">
          <div class="bg-gray-50 rounded-xl p-6">
            <h4 class="text-lg font-medium text-gray-900 mb-4">Property Information</h4>
            <div data-batch-properties-target="propertyDetailsContent" class="space-y-3">
              <!-- Content will be populated by JavaScript -->
            </div>
          </div>
        </div>

        <!-- Debug Data Section (Development only) -->
        <% if Rails.env.development? %>
          <div class="mt-6">
            <button type="button"
                    data-action="click->batch-properties#toggleDebugData"
                    class="flex items-center text-sm text-gray-600 hover:text-gray-900 transition-colors duration-200">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
              Toggle Debug Data
            </button>
            <div data-batch-properties-target="debugData" class="hidden mt-3 bg-gray-900 text-green-400 p-4 rounded-lg text-xs font-mono overflow-x-auto">
              <!-- Debug content will be populated by JavaScript -->
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Modal Footer -->
    <div class="px-8 py-4 border-t border-gray-200 bg-gray-50 flex justify-end">
      <button type="button"
              data-action="click->batch-properties#closeModal"
              class="px-6 py-2 border border-gray-300 rounded-xl text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
        Close
      </button>
    </div>
  </div>
</div>
