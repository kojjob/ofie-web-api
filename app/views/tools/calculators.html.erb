  <!-- Calculators Grid -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">

      <!-- Rental Yield Calculator -->
