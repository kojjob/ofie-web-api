<footer class="bg-gray-800 text-white" role="contentinfo" aria-label="Site footer">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <div class="h-8 w-8 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center shadow-sm">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <span class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">Ofie</span>
        </div>
        <p class="text-gray-300 text-sm leading-relaxed mb-4">
          Discover your perfect home with Ofie. We connect renters and landlords with seamless property management and booking solutions.
        </p>
        
        <!-- Social Media Links -->
        <div class="flex space-x-4">
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 rounded-lg p-2", 
              'aria-label': "Follow us on Facebook" do %>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
            </svg>
          <% end %>
          
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 rounded-lg p-2", 
              'aria-label': "Follow us on Twitter" do %>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
          <% end %>
          
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 rounded-lg p-2", 
              'aria-label': "Connect with us on LinkedIn" do %>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M19 0H5a5 5 0 00-5 5v14a5 5 0 005 5h14a5 5 0 005-5V5a5 5 0 00-5-5zM8 19H5V8h3v11zM6.5 6.732c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zM20 19h-3v-5.604c0-3.368-4-3.113-4 0V19h-3V8h3v1.765c1.396-2.586 7-2.777 7 2.476V19z" clip-rule="evenodd"></path>
            </svg>
          <% end %>
          
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 rounded-lg p-2", 
              'aria-label': "Follow us on Instagram" do %>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.32-1.297C4.198 14.81 3.708 13.659 3.708 12.362s.49-2.448 1.297-3.32c.872-.807 2.023-1.297 3.32-1.297s2.448.49 3.32 1.297c.807.872 1.297 2.023 1.297 3.32s-.49 2.448-1.297 3.32c-.872.807-2.023 1.297-3.32 1.297zm7.718-8.897h-2.156c-.163-.653-.392-1.224-.686-1.714-.294-.49-.653-.914-1.076-1.273-.424-.359-.914-.653-1.469-.882-.555-.229-1.158-.343-1.809-.343-.651 0-1.254.114-1.809.343-.555.229-1.045.523-1.469.882-.424.359-.782.783-1.076 1.273-.294.49-.523 1.061-.686 1.714H2.971c-.229 0-.424.163-.424.392v1.714c0 .229.195.392.424.392h2.156c.163.653.392 1.224.686 1.714.294.49.653.914 1.076 1.273.424.359.914.653 1.469.882.555.229 1.158.343 1.809.343.651 0 1.254-.114 1.809-.343.555-.229 1.045-.523 1.469-.882.424-.359.782-.783 1.076-1.273.294-.49.523-1.061.686-1.714h2.156c.229 0 .424-.163.424-.392v-1.714c0-.229-.195-.392-.424-.392z" clip-rule="evenodd"></path>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- For Renters -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-4 text-white">For Renters</h3>
        <ul class="space-y-3">
          <li>
            <%= link_to properties_path, class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Browse Properties
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Search by Location
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Rental Calculator
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Neighborhood Guides
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Renter Resources
            <% end %>
          </li>
        </ul>
      </div>

      <!-- For Landlords -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-4 text-white">For Landlords</h3>
        <ul class="space-y-3">
          <li>
            <%= link_to new_property_path, class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              List Your Property
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Property Management
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Tenant Screening
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Market Analysis
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Landlord Tools
            <% end %>
          </li>
        </ul>
      </div>

      <!-- Company & Support -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-4 text-white">Company</h3>
        <ul class="space-y-3">
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              About Us
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Contact Support
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Help Center
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Careers
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
              Press & Media
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="mt-12 pt-8 border-t border-gray-700">
      <div class="max-w-md mx-auto text-center lg:max-w-none lg:text-left">
        <h3 class="text-lg font-semibold mb-4 text-white">Stay Updated</h3>
        <p class="text-gray-300 text-sm mb-4">Get the latest property listings and rental market insights delivered to your inbox.</p>
        
        <form class="flex flex-col sm:flex-row gap-3 max-w-md lg:max-w-lg">
          <div class="flex-1">
            <label for="email-newsletter" class="sr-only">Email address</label>
            <input type="email" 
                   id="email-newsletter"
                   name="email" 
                   placeholder="Enter your email address"
                   required
                   class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200">
          </div>
          <button type="submit" 
                  class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-2 rounded-lg font-medium hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition duration-200 whitespace-nowrap">
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-700 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        <!-- Copyright -->
        <div class="text-gray-400 text-sm">
          <p>&copy; <%= Date.current.year %> Ofie. All rights reserved.</p>
        </div>

        <!-- Legal Links -->
        <div class="flex flex-wrap justify-center space-x-6 text-sm">
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
            Privacy Policy
          <% end %>
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
            Terms of Service
          <% end %>
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
            Cookie Policy
          <% end %>
          <%= link_to "#", class: "text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" do %>
            Accessibility
          <% end %>
        </div>

        <!-- Back to Top Button -->
        <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" 
                class="flex items-center space-x-2 text-gray-400 hover:text-blue-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded-lg px-3 py-2"
                aria-label="Back to top">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
          <span class="text-sm hidden sm:inline">Back to top</span>
        </button>
      </div>
    </div>
  </div>
</footer>
