<!-- Breadcrumb -->
<div class="bg-gray-50 border-b border-gray-200">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center space-x-2 text-sm">
      <%= link_to "Home", root_path, class: "text-gray-600 hover:text-emerald-600 transition-colors" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <%= link_to "Blog", blog_index_path, class: "text-gray-600 hover:text-emerald-600 transition-colors" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-900 font-medium truncate max-w-xs"><%= truncate(@post.title, length: 40) %></span>
    </nav>
  </div>
</div>

<article class="bg-white">
  <div class="container mx-auto px-4 py-12">
    <!-- Two Column Layout -->
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Main Content Column -->
      <div class="lg:w-2/3">
        <!-- Featured Image -->
        <% if @post.featured_image.attached? %>
          <div class="mb-8 rounded-xl overflow-hidden shadow-lg">
            <%= image_tag @post.featured_image.variant(resize_to_limit: [1200, 600]),
                class: "w-full h-auto object-cover",
                alt: @post.title %>
          </div>
        <% end %>

        <!-- Post Header -->
        <header class="mb-8">
          <!-- Title -->
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 leading-tight">
            <%= @post.title %>
          </h1>

          <!-- Meta Information Row -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 pb-6 border-b border-gray-200">
            <!-- Author & Date -->
            <div class="flex items-center">
              <span class="text-gray-500">Posted by</span>
              <span class="ml-1 font-medium text-gray-800"><%= @post.author.name %></span>
              <span class="mx-2 text-gray-400">on</span>
              <time datetime="<%= @post.published_at %>" class="text-gray-800">
                <%= @post.published_at.strftime("%B %d, %Y") %>
              </time>
            </div>

            <!-- Category Link -->
            <div class="flex items-center">
              <span class="text-gray-500">in</span>
              <%= link_to blog_index_path(category: @post.category),
                  class: "ml-1 text-emerald-600 hover:text-emerald-700 font-medium transition-colors" do %>
                <%= @post.category.titleize %>
              <% end %>
            </div>

            <!-- Comments Count -->
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
              </svg>
              <span><%= @post.comments_count %> Comments</span>
            </div>
          </div>

          <!-- Edit/Delete Actions (for author) -->
          <% if current_user && (@post.author == current_user || current_user.landlord?) %>
            <div class="flex space-x-3 mt-4">
              <%= link_to edit_blog_post_path(@post.slug),
                  class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Post
              <% end %>
              <%= button_to destroy_blog_post_path(@post.slug), method: :delete,
                  data: { confirm: "Are you sure you want to delete this post?" },
                  class: "inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Post
              <% end %>
            </div>
          <% end %>
        </header>

        <!-- Post Content -->
        <div class="prose prose-lg max-w-none mb-10
                    prose-headings:font-bold prose-headings:text-gray-900
                    prose-p:text-gray-700 prose-p:leading-relaxed
                    prose-a:text-emerald-600 prose-a:no-underline hover:prose-a:underline
                    prose-blockquote:border-l-4 prose-blockquote:border-emerald-500 prose-blockquote:bg-emerald-50 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:italic prose-blockquote:text-gray-700
                    prose-ul:list-disc prose-ol:list-decimal
                    prose-img:rounded-lg prose-img:shadow-md">
          <%= @post.content %>
        </div>

        <!-- Media Gallery -->
        <% if @post.media_attachments.attached? %>
          <div class="mb-10">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Media Gallery
            </h3>

            <!-- Images -->
            <% if @post.images.any? %>
              <div class="mb-6">
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                  <% @post.images.each do |image| %>
                    <div class="group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all">
                      <%= image_tag image.variant(resize_to_limit: [400, 300]),
                          class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300",
                          alt: image.filename.to_s,
                          loading: "lazy" %>
                      <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                        <%= link_to rails_blob_path(image, disposition: "attachment"),
                            class: "text-white hover:text-emerald-300" do %>
                          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Videos -->
            <% if @post.videos.any? %>
              <div class="mb-6">
                <h4 class="text-lg font-semibold text-gray-800 mb-3">Videos</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <% @post.videos.each do |video| %>
                    <div class="bg-gray-900 rounded-lg overflow-hidden shadow-lg">
                      <video controls class="w-full h-auto" preload="metadata">
                        <source src="<%= rails_blob_path(video) %>" type="<%= video.content_type %>">
                        Your browser does not support the video tag.
                      </video>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Audio Files -->
            <% if @post.audio_files.any? %>
              <div class="mb-6">
                <h4 class="text-lg font-semibold text-gray-800 mb-3">Audio</h4>
                <div class="space-y-3">
                  <% @post.audio_files.each do |audio| %>
                    <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-lg p-4 border border-purple-200">
                      <div class="flex items-center mb-2">
                        <svg class="w-6 h-6 text-purple-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
                        </svg>
                        <span class="text-gray-900 font-medium text-sm"><%= audio.filename %></span>
                      </div>
                      <audio controls class="w-full">
                        <source src="<%= rails_blob_path(audio) %>" type="<%= audio.content_type %>">
                        Your browser does not support the audio element.
                      </audio>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- PDF Documents -->
            <% if @post.pdfs.any? %>
              <div class="mb-6">
                <h4 class="text-lg font-semibold text-gray-800 mb-3">Documents</h4>
                <div class="space-y-3">
                  <% @post.pdfs.each do |pdf| %>
                    <div class="bg-gradient-to-r from-red-50 to-orange-50 rounded-lg p-4 border border-red-200 flex items-center justify-between">
                      <div class="flex items-center">
                        <svg class="w-10 h-10 text-red-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                        </svg>
                        <div>
                          <p class="font-medium text-gray-900"><%= pdf.filename %></p>
                          <p class="text-sm text-gray-600"><%= number_to_human_size(pdf.byte_size) %></p>
                        </div>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to rails_blob_path(pdf), target: "_blank",
                            class: "px-3 py-1.5 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm" do %>
                          View
                        <% end %>
                        <%= link_to rails_blob_path(pdf, disposition: "attachment"),
                            class: "px-3 py-1.5 bg-white text-red-600 border border-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm" do %>
                          Download
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Tags -->
        <% if @post.tags.present? %>
          <div class="mb-8 pb-6 border-b border-gray-200">
            <div class="flex flex-wrap gap-2">
              <% @post.tags_array.each do |tag| %>
                <span class="bg-gray-100 text-gray-700 px-3 py-1.5 rounded-full text-sm font-medium hover:bg-emerald-50 hover:text-emerald-700 transition-colors cursor-pointer">
                  #<%= tag %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Share Buttons -->
        <div class="mb-10 pb-8 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
          <div class="flex items-center flex-wrap gap-3">
            <!-- Facebook -->
            <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>"
               target="_blank"
               rel="noopener noreferrer"
               class="inline-flex items-center px-4 py-2 bg-[#1877F2] text-white rounded-lg hover:bg-[#166FE5] transition-colors text-sm font-medium">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              Facebook
            </a>

            <!-- Twitter/X -->
            <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=<%= url_encode(@post.title) %>"
               target="_blank"
               rel="noopener noreferrer"
               class="inline-flex items-center px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors text-sm font-medium">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
              Tweet
            </a>

            <!-- WhatsApp -->
            <a href="https://wa.me/?text=<%= url_encode(@post.title + ' - ' + request.original_url) %>"
               target="_blank"
               rel="noopener noreferrer"
               class="inline-flex items-center px-4 py-2 bg-[#25D366] text-white rounded-lg hover:bg-[#20BD5A] transition-colors text-sm font-medium">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp
            </a>

            <!-- Email -->
            <a href="mailto:?subject=<%= url_encode(@post.title) %>&body=<%= url_encode('Check out this article: ' + request.original_url) %>"
               class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors text-sm font-medium">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Email
            </a>

            <!-- Copy Link -->
            <button onclick="navigator.clipboard.writeText('<%= request.original_url %>').then(() => { this.innerHTML = '<svg class=\'w-5 h-5 mr-2\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M5 13l4 4L19 7\'></path></svg>Copied!'; setTimeout(() => { this.innerHTML = '<svg class=\'w-5 h-5 mr-2\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z\'></path></svg>Copy Link'; }, 2000); })"
                    class="inline-flex items-center px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors text-sm font-medium">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Copy Link
            </button>
          </div>
        </div>

        <!-- Author Bio -->
        <div class="mb-10 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6">
          <div class="flex items-start space-x-5">
            <% if @post.author.avatar.attached? %>
              <%= image_tag @post.author.avatar.variant(resize_to_fill: [80, 80]),
                  class: "w-20 h-20 rounded-full object-cover border-4 border-white shadow-md flex-shrink-0",
                  alt: @post.author.name %>
            <% else %>
              <div class="w-20 h-20 rounded-full bg-emerald-200 flex items-center justify-center border-4 border-white shadow-md flex-shrink-0">
                <span class="text-emerald-700 font-bold text-2xl">
                  <%= @post.author.name.first %>
                </span>
              </div>
            <% end %>
            <div class="flex-1">
              <p class="text-sm text-gray-500 uppercase tracking-wide font-medium mb-1">About the Author</p>
              <h4 class="text-xl font-bold text-gray-900 mb-2"><%= @post.author.name %></h4>
              <p class="text-gray-600 text-sm mb-3">
                <%= @post.author.bio.present? ? @post.author.bio : "A passionate writer sharing insights about real estate and property investment." %>
              </p>
              <%= link_to blog_index_path(author: @post.author.id),
                  class: "inline-flex items-center text-emerald-600 hover:text-emerald-700 font-medium text-sm transition-colors" do %>
                View all posts
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Navigation (Previous/Next Posts) -->
        <div class="mb-10 grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Previous Post -->
          <% if @prev_post = Post.published.where("published_at < ?", @post.published_at).recent.first %>
            <%= link_to blog_post_path(@prev_post.slug),
                class: "group bg-white border border-gray-200 rounded-xl p-5 hover:border-emerald-500 hover:shadow-md transition-all" do %>
              <p class="text-xs text-gray-500 mb-2 flex items-center uppercase tracking-wide">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Previous Post
              </p>
              <h4 class="font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors line-clamp-2">
                <%= truncate(@prev_post.title, length: 60) %>
              </h4>
            <% end %>
          <% else %>
            <div></div>
          <% end %>

          <!-- Next Post -->
          <% if @next_post = Post.published.where("published_at > ?", @post.published_at).order(published_at: :asc).first %>
            <%= link_to blog_post_path(@next_post.slug),
                class: "group bg-white border border-gray-200 rounded-xl p-5 hover:border-emerald-500 hover:shadow-md transition-all text-right" do %>
              <p class="text-xs text-gray-500 mb-2 flex items-center justify-end uppercase tracking-wide">
                Next Post
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </p>
              <h4 class="font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors line-clamp-2">
                <%= truncate(@next_post.title, length: 60) %>
              </h4>
            <% end %>
          <% end %>
        </div>

        <!-- Related Posts -->
        <% if @related_posts.any? %>
          <div class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Posts</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
              <% @related_posts.each do |related_post| %>
                <article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100">
                  <div class="relative h-40 bg-gray-200">
                    <% if related_post.featured_image.attached? %>
                      <%= image_tag related_post.featured_image.variant(resize_to_fill: [400, 200]),
                          class: "w-full h-full object-cover",
                          alt: related_post.title %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-emerald-100 to-teal-100">
                        <svg class="w-12 h-12 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  <div class="p-4">
                    <h3 class="font-bold text-gray-900 mb-2 line-clamp-2 hover:text-emerald-600 transition-colors">
                      <%= link_to related_post.title, blog_post_path(related_post.slug) %>
                    </h3>
                    <p class="text-sm text-gray-500">
                      <%= related_post.published_at.strftime("%B %d, %Y") %>
                    </p>
                  </div>
                </article>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Comment Section -->
        <div id="comments" class="bg-gray-50 rounded-xl p-6 md:p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            <%= @post.comments_count %> <%= @post.comments_count == 1 ? 'Comment' : 'Comments' %>
          </h3>

          <!-- Comment Form -->
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 mb-8">
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Leave a Comment</h4>

            <% if current_user %>
              <%= form_with url: "#", method: :post, class: "space-y-4", data: { turbo: false } do |f| %>
                <div>
                  <label for="comment_content" class="block text-sm font-medium text-gray-700 mb-2">Your Comment *</label>
                  <textarea id="comment_content" name="comment[content]" rows="5"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 resize-none transition-colors"
                            placeholder="Share your thoughts..."></textarea>
                </div>

                <div class="flex items-start">
                  <input type="checkbox" id="save_info" name="save_info"
                         class="mt-1 h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-gray-300 rounded">
                  <label for="save_info" class="ml-2 text-sm text-gray-600">
                    Send me email notifications when someone replies to my comment
                  </label>
                </div>

                <button type="submit"
                        class="px-6 py-3 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-colors">
                  Post Comment
                </button>
              <% end %>
            <% else %>
              <!-- Guest Comment Form -->
              <%= form_with url: "#", method: :post, class: "space-y-4", data: { turbo: false } do |f| %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label for="comment_name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                    <input type="text" id="comment_name" name="comment[name]"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                           placeholder="Your name">
                  </div>
                  <div>
                    <label for="comment_email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                    <input type="email" id="comment_email" name="comment[email]"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                           placeholder="your@email.com">
                    <p class="mt-1 text-xs text-gray-500">Your email will not be published</p>
                  </div>
                </div>

                <div>
                  <label for="comment_website" class="block text-sm font-medium text-gray-700 mb-2">Website</label>
                  <input type="url" id="comment_website" name="comment[website]"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                         placeholder="https://yourwebsite.com">
                </div>

                <div>
                  <label for="comment_content" class="block text-sm font-medium text-gray-700 mb-2">Your Comment *</label>
                  <textarea id="comment_content" name="comment[content]" rows="5"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 resize-none transition-colors"
                            placeholder="Share your thoughts..."></textarea>
                </div>

                <div class="flex items-start">
                  <input type="checkbox" id="save_info" name="save_info"
                         class="mt-1 h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-gray-300 rounded">
                  <label for="save_info" class="ml-2 text-sm text-gray-600">
                    Save my name, email, and website in this browser for the next time I comment
                  </label>
                </div>

                <button type="submit"
                        class="px-6 py-3 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-colors">
                  Post Comment
                </button>
              <% end %>
            <% end %>
          </div>

          <!-- Existing Comments Placeholder -->
          <div class="text-center py-8 text-gray-500">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <p>Be the first to leave a comment!</p>
          </div>
        </div>
      </div>

      <!-- Sidebar Column -->
      <aside class="lg:w-1/3">
        <div class="sticky top-24 space-y-8">
          <!-- Search Widget -->
          <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-emerald-600 to-teal-600 px-5 py-4">
              <h3 class="text-white font-bold text-lg">Advanced Search</h3>
            </div>
            <div class="p-5">
              <%= form_with url: properties_path, method: :get, class: "space-y-4", data: { turbo: false } do |f| %>
                <div>
                  <label for="search_keyword" class="block text-sm font-medium text-gray-700 mb-1">Keyword</label>
                  <input type="text" id="search_keyword" name="search"
                         class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm transition-colors"
                         placeholder="Search properties...">
                </div>

                <div>
                  <label for="search_city" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
                  <select id="search_city" name="city"
                          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm transition-colors">
                    <option value="">All Locations</option>
                    <option value="accra">Accra</option>
                    <option value="kumasi">Kumasi</option>
                    <option value="takoradi">Takoradi</option>
                    <option value="cape_coast">Cape Coast</option>
                    <option value="tamale">Tamale</option>
                  </select>
                </div>

                <div>
                  <label for="search_type" class="block text-sm font-medium text-gray-700 mb-1">Property Type</label>
                  <select id="search_type" name="property_type"
                          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm transition-colors">
                    <option value="">All Types</option>
                    <option value="apartment">Apartment</option>
                    <option value="house">House</option>
                    <option value="villa">Villa</option>
                    <option value="land">Land</option>
                    <option value="commercial">Commercial</option>
                  </select>
                </div>

                <div class="grid grid-cols-2 gap-3">
                  <div>
                    <label for="min_price" class="block text-sm font-medium text-gray-700 mb-1">Min Price</label>
                    <input type="number" id="min_price" name="min_price"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm transition-colors"
                           placeholder="Min">
                  </div>
                  <div>
                    <label for="max_price" class="block text-sm font-medium text-gray-700 mb-1">Max Price</label>
                    <input type="number" id="max_price" name="max_price"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm transition-colors"
                           placeholder="Max">
                  </div>
                </div>

                <button type="submit"
                        class="w-full px-4 py-2.5 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-colors flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                  Search Properties
                </button>
              <% end %>
            </div>
          </div>

          <!-- Latest Listings Widget -->
          <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-emerald-600 to-teal-600 px-5 py-4">
              <h3 class="text-white font-bold text-lg">Latest Listings</h3>
            </div>
            <div class="p-5">
              <% if @latest_properties.any? %>
                <div class="space-y-4">
                  <% @latest_properties.each do |property| %>
                    <%= link_to property_path(property), class: "flex gap-3 group" do %>
                      <div class="w-20 h-20 flex-shrink-0 rounded-lg overflow-hidden bg-gray-200">
                        <% if property.photos.attached? && property.photos.first.present? %>
                          <%= image_tag property.photos.first.variant(resize_to_fill: [80, 80]),
                              class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-300",
                              alt: property.title %>
                        <% else %>
                          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-emerald-100 to-teal-100">
                            <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                          </div>
                        <% end %>
                      </div>
                      <div class="flex-1 min-w-0">
                        <h4 class="font-semibold text-gray-900 text-sm line-clamp-2 group-hover:text-emerald-600 transition-colors">
                          <%= truncate(property.title, length: 45) %>
                        </h4>
                        <p class="text-emerald-600 font-bold text-sm mt-1">
                          <%= number_to_currency(property.price, unit: "GHâ‚µ", precision: 0) %>
                        </p>
                        <p class="text-xs text-gray-500 mt-0.5 flex items-center">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          </svg>
                          <%= property.city %>
                        </p>
                      </div>
                    <% end %>
                  <% end %>
                </div>
                <div class="mt-5 pt-4 border-t border-gray-100">
                  <%= link_to properties_path, class: "text-emerald-600 hover:text-emerald-700 font-medium text-sm flex items-center justify-center transition-colors" do %>
                    View All Listings
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                </div>
              <% else %>
                <p class="text-gray-500 text-center py-4">No listings available</p>
              <% end %>
            </div>
          </div>

          <!-- Categories Widget -->
          <% if @categories.any? %>
            <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
              <div class="bg-gradient-to-r from-emerald-600 to-teal-600 px-5 py-4">
                <h3 class="text-white font-bold text-lg">Categories</h3>
              </div>
              <div class="p-5">
                <ul class="space-y-2">
                  <% @categories.each do |category| %>
                    <li>
                      <%= link_to blog_index_path(category: category),
                          class: "flex items-center justify-between py-2 px-3 rounded-lg hover:bg-emerald-50 transition-colors group" do %>
                        <span class="text-gray-700 group-hover:text-emerald-600 transition-colors"><%= category.titleize %></span>
                        <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full group-hover:bg-emerald-100 group-hover:text-emerald-700 transition-colors">
                          <%= Post.published.by_category(category).count %>
                        </span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <!-- Newsletter Widget -->
          <div class="bg-gradient-to-br from-emerald-600 to-teal-600 rounded-xl shadow-md overflow-hidden">
            <div class="p-6 text-white">
              <h3 class="font-bold text-lg mb-2">Subscribe to Newsletter</h3>
              <p class="text-emerald-100 text-sm mb-4">Get the latest property insights delivered to your inbox</p>
              <%= form_with url: "#", method: :post, class: "space-y-3", data: { turbo: false } do |f| %>
                <input type="email" name="email" placeholder="Your email address"
                       class="w-full px-4 py-2.5 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50">
                <button type="submit"
                        class="w-full px-4 py-2.5 bg-white text-emerald-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors">
                  Subscribe
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>
</article>
