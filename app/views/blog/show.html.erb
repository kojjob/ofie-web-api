<!-- Breadcrumb -->
<div class="bg-gray-50 border-b border-gray-200">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center space-x-2 text-sm">
      <%= link_to "Home", root_path, class: "text-gray-600 hover:text-emerald-600" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <%= link_to "Blog", blog_index_path, class: "text-gray-600 hover:text-emerald-600" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <%= link_to @post.category.titleize, blog_index_path(category: @post.category), class: "text-gray-600 hover:text-emerald-600" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-900 font-medium truncate max-w-xs"><%= truncate(@post.title, length: 40) %></span>
    </nav>
  </div>
</div>

<article class="bg-white">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <!-- Post Header -->
      <header class="mb-12">
        <!-- Category Badge -->
        <div class="mb-6">
          <%= link_to blog_index_path(category: @post.category),
              class: "inline-block bg-emerald-100 text-emerald-700 px-5 py-2 rounded-full text-sm font-semibold uppercase tracking-wider hover:bg-emerald-200 transition-colors" do %>
            <%= @post.category %>
          <% end %>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
          <%= @post.title %>
        </h1>

        <!-- Meta Information -->
        <div class="flex flex-wrap items-center justify-between gap-4 pb-8 border-b border-gray-200">
          <!-- Author Info -->
          <div class="flex items-center space-x-4">
            <% if @post.author.avatar.attached? %>
              <%= image_tag @post.author.avatar.variant(resize_to_fill: [60, 60]),
                  class: "w-14 h-14 rounded-full object-cover border-2 border-emerald-100",
                  alt: @post.author.name %>
            <% else %>
              <div class="w-14 h-14 rounded-full bg-emerald-100 flex items-center justify-center border-2 border-emerald-200">
                <span class="text-emerald-600 font-bold text-xl">
                  <%= @post.author.name.first %>
                </span>
              </div>
            <% end %>
            <div>
              <p class="font-semibold text-gray-900"><%= @post.author.name %></p>
              <time datetime="<%= @post.published_at %>" class="text-sm text-gray-600">
                <%= @post.published_at.strftime("%B %d, %Y") %>
              </time>
            </div>
          </div>

          <!-- Post Stats -->
          <div class="flex items-center space-x-6 text-sm text-gray-600">
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <%= @post.views_count %> Views
            </span>
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= @post.reading_time %> min read
            </span>
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
              </svg>
              <%= @post.comments_count %> Comments
            </span>
          </div>
        </div>

        <!-- Edit/Delete Actions (for author) -->
        <% if current_user && (@post.author == current_user || current_user.landlord?) %>
          <div class="flex space-x-3 mt-6">
            <%= link_to edit_blog_post_path(@post.slug),
                class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Post
            <% end %>
            <%= button_to destroy_blog_post_path(@post.slug), method: :delete,
                data: { confirm: "Are you sure you want to delete this post?" },
                class: "inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete Post
            <% end %>
          </div>
        <% end %>
      </header>

      <!-- Featured Image -->
      <% if @post.featured_image.attached? %>
        <div class="mb-12 rounded-2xl overflow-hidden shadow-2xl">
          <%= image_tag @post.featured_image.variant(resize_to_limit: [1200, 600]),
              class: "w-full h-auto",
              alt: @post.title %>
        </div>
      <% end %>

      <!-- Post Content -->
      <div class="prose prose-lg max-w-none mb-12">
        <%= @post.content %>
      </div>

      <!-- Media Gallery -->
      <% if @post.media_attachments.attached? %>
        <div class="mb-12">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Media Gallery
          </h3>

          <!-- Images -->
          <% if @post.images.any? %>
            <div class="mb-8">
              <h4 class="text-lg font-semibold text-gray-800 mb-4">Images</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% @post.images.each do |image| %>
                  <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all">
                    <%= image_tag image.variant(resize_to_limit: [800, 600]),
                        class: "w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300",
                        alt: image.filename.to_s,
                        loading: "lazy" %>
                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4 opacity-0 group-hover:opacity-100 transition-opacity">
                      <p class="text-white text-sm truncate"><%= image.filename %></p>
                      <%= link_to "Download", rails_blob_path(image, disposition: "attachment"),
                          class: "text-emerald-400 hover:text-emerald-300 text-xs" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Videos -->
          <% if @post.videos.any? %>
            <div class="mb-8">
              <h4 class="text-lg font-semibold text-gray-800 mb-4">Videos</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% @post.videos.each do |video| %>
                  <div class="bg-gray-900 rounded-xl overflow-hidden shadow-lg">
                    <video controls class="w-full h-auto" preload="metadata">
                      <source src="<%= rails_blob_path(video) %>" type="<%= video.content_type %>">
                      Your browser does not support the video tag.
                    </video>
                    <div class="bg-gray-800 p-3 flex items-center justify-between">
                      <p class="text-white text-sm truncate flex-1"><%= video.filename %></p>
                      <%= link_to rails_blob_path(video, disposition: "attachment"),
                          class: "ml-3 text-emerald-400 hover:text-emerald-300 flex items-center" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Download
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Audio Files -->
          <% if @post.audio_files.any? %>
            <div class="mb-8">
              <h4 class="text-lg font-semibold text-gray-800 mb-4">Audio</h4>
              <div class="space-y-4">
                <% @post.audio_files.each do |audio| %>
                  <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-4 border border-purple-200">
                    <div class="flex items-center mb-3">
                      <svg class="w-8 h-8 text-purple-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
                      </svg>
                      <div class="flex-1">
                        <p class="text-gray-900 font-medium"><%= audio.filename %></p>
                        <p class="text-gray-600 text-sm"><%= number_to_human_size(audio.byte_size) %></p>
                      </div>
                      <%= link_to rails_blob_path(audio, disposition: "attachment"),
                          class: "text-purple-600 hover:text-purple-700 flex items-center" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                      <% end %>
                    </div>
                    <audio controls class="w-full">
                      <source src="<%= rails_blob_path(audio) %>" type="<%= audio.content_type %>">
                      Your browser does not support the audio element.
                    </audio>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- PDF Documents -->
          <% if @post.pdfs.any? %>
            <div class="mb-8">
              <h4 class="text-lg font-semibold text-gray-800 mb-4">Documents</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% @post.pdfs.each do |pdf| %>
                  <div class="bg-gradient-to-r from-red-50 to-orange-50 rounded-xl p-5 border-2 border-red-200 hover:border-red-400 transition-colors">
                    <div class="flex items-start">
                      <svg class="w-12 h-12 text-red-600 mr-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                      </svg>
                      <div class="flex-1">
                        <h5 class="font-semibold text-gray-900 mb-1"><%= pdf.filename %></h5>
                        <p class="text-gray-600 text-sm mb-3"><%= number_to_human_size(pdf.byte_size) %></p>
                        <div class="flex space-x-3">
                          <%= link_to rails_blob_path(pdf),
                              target: "_blank",
                              class: "inline-flex items-center px-3 py-1 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm" do %>
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            View
                          <% end %>
                          <%= link_to rails_blob_path(pdf, disposition: "attachment"),
                              class: "inline-flex items-center px-3 py-1 bg-white text-red-600 border-2 border-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm" do %>
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                            </svg>
                            Download
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Other Files -->
          <% if @post.other_files.any? %>
            <div class="mb-8">
              <h4 class="text-lg font-semibold text-gray-800 mb-4">Other Files</h4>
              <div class="space-y-3">
                <% @post.other_files.each do |file| %>
                  <div class="bg-white rounded-lg p-4 border-2 border-gray-200 hover:border-emerald-400 transition-colors flex items-center justify-between">
                    <div class="flex items-center flex-1">
                      <svg class="w-8 h-8 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                      </svg>
                      <div>
                        <p class="font-medium text-gray-900"><%= file.filename %></p>
                        <p class="text-sm text-gray-600"><%= number_to_human_size(file.byte_size) %></p>
                      </div>
                    </div>
                    <%= link_to rails_blob_path(file, disposition: "attachment"),
                        class: "inline-flex items-center px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                      </svg>
                      Download
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Tags -->
      <% if @post.tags.present? %>
        <div class="mb-12 pb-8 border-b border-gray-200">
          <div class="flex flex-wrap gap-2">
            <% @post.tags_array.each do |tag| %>
              <span class="bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm font-medium hover:bg-emerald-50 hover:text-emerald-700 transition-colors">
                #<%= tag %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Share Buttons -->
      <div class="mb-12 pb-8 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this post:</h3>
        <div class="flex items-center space-x-3">
          <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>"
             target="_blank"
             class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-600 text-white hover:bg-blue-700 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=<%= @post.title %>"
             target="_blank"
             class="flex items-center justify-center w-10 h-10 rounded-full bg-sky-500 text-white hover:bg-sky-600 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= request.original_url %>&title=<%= @post.title %>"
             target="_blank"
             class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-700 text-white hover:bg-blue-800 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <button onclick="navigator.clipboard.writeText('<%= request.original_url %>'); alert('Link copied to clipboard!')"
                  class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-600 text-white hover:bg-gray-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Author Bio -->
      <div class="mb-12 bg-gradient-to-br from-emerald-50 to-teal-50 rounded-2xl p-8">
        <div class="flex items-start space-x-6">
          <% if @post.author.avatar.attached? %>
            <%= image_tag @post.author.avatar.variant(resize_to_fill: [80, 80]),
                class: "w-20 h-20 rounded-full object-cover border-4 border-white shadow-lg flex-shrink-0",
                alt: @post.author.name %>
          <% else %>
            <div class="w-20 h-20 rounded-full bg-emerald-200 flex items-center justify-center border-4 border-white shadow-lg flex-shrink-0">
              <span class="text-emerald-700 font-bold text-2xl">
                <%= @post.author.name.first %>
              </span>
            </div>
          <% end %>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Author</h3>
            <p class="font-semibold text-emerald-700 mb-2"><%= @post.author.name %></p>
            <p class="text-gray-700 mb-4">
              <%= @post.author.email %>
            </p>
            <div class="flex space-x-2">
              <!-- Add social links if available -->
            </div>
          </div>
        </div>
      </div>

      <!-- Navigation (Previous/Next Posts) -->
      <div class="mb-12 grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Previous Post -->
        <% if @prev_post = Post.published.where("published_at < ?", @post.published_at).recent.first %>
          <%= link_to blog_post_path(@prev_post.slug),
              class: "group bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-emerald-500 hover:shadow-lg transition-all" do %>
            <p class="text-sm text-gray-500 mb-2 flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              prev post
            </p>
            <h4 class="font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors">
              <%= truncate(@prev_post.title, length: 60) %>
            </h4>
          <% end %>
        <% else %>
          <div></div>
        <% end %>

        <!-- Next Post -->
        <% if @next_post = Post.published.where("published_at > ?", @post.published_at).order(published_at: :asc).first %>
          <%= link_to blog_post_path(@next_post.slug),
              class: "group bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-emerald-500 hover:shadow-lg transition-all text-right" do %>
            <p class="text-sm text-gray-500 mb-2 flex items-center justify-end">
              next post
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </p>
            <h4 class="font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors">
              <%= truncate(@next_post.title, length: 60) %>
            </h4>
          <% end %>
        <% end %>
      </div>

      <!-- Related Posts -->
      <% if @related_posts.any? %>
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
            <svg class="w-8 h-8 text-emerald-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Related Posts
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% @related_posts.each do |related_post| %>
              <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                <div class="relative h-48 bg-gray-200">
                  <% if related_post.featured_image.attached? %>
                    <%= image_tag related_post.featured_image.variant(resize_to_fill: [400, 300]),
                        class: "w-full h-full object-cover",
                        alt: related_post.title %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-emerald-100 to-teal-100">
                      <svg class="w-16 h-16 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="p-5">
                  <h3 class="font-bold text-lg mb-2 text-gray-900 hover:text-emerald-600 transition-colors line-clamp-2">
                    <%= link_to related_post.title, blog_post_path(related_post.slug) %>
                  </h3>
                  <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                    <%= related_post.excerpt || truncate(strip_tags(related_post.content.to_s), length: 100) %>
                  </p>
                  <%= link_to blog_post_path(related_post.slug), class: "text-emerald-600 hover:text-emerald-700 font-medium text-sm flex items-center group" do %>
                    Read More
                    <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                </div>
              </article>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Comment Section Placeholder -->
      <div class="bg-gray-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Comments (<%= @post.comments_count %>)</h3>
        <p class="text-gray-600 text-center py-12">
          Comment functionality coming soon...
        </p>
      </div>
    </div>
  </div>
</article>
