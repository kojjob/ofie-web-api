<!-- Modern Property Description - Professional Layout -->
<div class="space-y-6">
  <!-- Property Overview -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Property Overview</h3>
    <div class="prose prose-gray max-w-none">
      <p class="text-gray-700 leading-relaxed">
        <%= simple_format(@property.description) %>
      </p>
    </div>
  </div>

  <!-- Key Features Grid -->
  <div>
    <h4 class="text-base font-semibold text-gray-900 mb-3">Key Features</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      <% if @property.furnished? %>
        <div class="flex items-center text-gray-700">
          <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Fully Furnished
        </div>
      <% end %>
      
      <% if @property.parking_available? %>
        <div class="flex items-center text-gray-700">
          <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Parking Available
        </div>
      <% end %>

      <% if @property.pets_allowed? %>
        <div class="flex items-center text-gray-700">
          <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Pet Friendly
        </div>
      <% end %>

      <% if @property.balcony? %>
        <div class="flex items-center text-gray-700">
          <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Private Balcony
        </div>
      <% end %>
    </div>
  </div>

  <!-- Additional Details -->
  <% if @property.availability_status == 'available' %>
    <div>
      <h4 class="text-base font-semibold text-gray-900 mb-3">Availability Information</h4>
      <div class="bg-gray-50 rounded-lg p-4 space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Status:</span>
          <span class="text-green-600 font-medium">Available for Rent</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-600">Monthly Rent:</span>
          <span class="text-gray-900 font-medium"><%= number_to_currency(@property.price) %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
