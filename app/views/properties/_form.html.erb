<%= form_with model: property, local: true, multipart: true, class: "space-y-6" do |form| %>
  <% if property.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(property.errors.count, "error") %> with your submission:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% property.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Property Images -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Property Photos</h3>
    
    <div class="space-y-4">
      <!-- File Upload -->
      <div>
        <%= form.label :photos, "Upload Photos", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :photos, 
                            multiple: true, 
                            accept: "image/*",
                            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
                            data: { controller: "image-preview", action: "change->image-preview#preview" } %>
        <p class="mt-1 text-sm text-gray-500">PNG, JPG, GIF up to 10MB each. You can select multiple images.</p>
      </div>
      
      <!-- Image Preview -->
      <div data-image-preview-target="container" class="hidden">
        <h4 class="text-sm font-medium text-gray-700 mb-2">Preview:</h4>
        <div data-image-preview-target="grid" class="grid grid-cols-2 md:grid-cols-4 gap-4"></div>
      </div>
      
      <!-- Existing Images (for edit) -->
      <% if property.persisted? && property.photos.attached? %>
        <div>
          <h4 class="text-sm font-medium text-gray-700 mb-2">Current Photos:</h4>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% property.photos.each do |photo| %>
              <div class="relative group">
                <%= image_tag photo, class: "w-full h-32 object-cover rounded-lg" %>
                <%= link_to "Remove", 
                            remove_photo_property_path(property, photo_id: photo.id), 
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            class: "absolute top-2 right-2 bg-red-600 text-white px-2 py-1 rounded text-xs opacity-0 group-hover:opacity-100 transition-opacity" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Basic Information -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Basic Information</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :title, 
                            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                            placeholder: "e.g., Beautiful 2BR Apartment in Downtown" %>
      </div>
      
      <div>
        <%= form.label :property_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :property_type, 
                        options_for_select(Property.property_types.map { |key, value| [key.humanize, key] }, property.property_type),
                        { prompt: "Select property type" },
                        { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
    </div>
    
    <div class="mt-6">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, 
                         rows: 4,
                         class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                         placeholder: "Describe your property, amenities, and what makes it special..." %>
    </div>
  </div>

  <!-- Location -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Location</h3>
    
    <div class="space-y-4">
      <div>
        <%= form.label :address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :address, 
                            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                            placeholder: "123 Main Street" %>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <%= form.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :city, 
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                              placeholder: "City" %>
        </div>
        
        <div>
          <%= form.label :state, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :state, 
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                              placeholder: "State" %>
        </div>
        
        <div>
          <%= form.label :zip_code, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :zip_code, 
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                              placeholder: "12345" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Property Details -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Property Details</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <%= form.label :bedrooms, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :bedrooms, 
                              min: 0,
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      
      <div>
        <%= form.label :bathrooms, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :bathrooms, 
                              min: 0.5,
                              step: 0.5,
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      
      <div>
        <%= form.label :square_feet, "Square Feet", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :square_feet, 
                              min: 1,
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      
      <div>
        <%= form.label :price, "Monthly Rent ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :price, 
                              min: 1,
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Availability -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Availability</h3>
    
    <div>
      <%= form.label :availability_status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :availability_status, 
                      options_for_select(Property.availability_statuses.map { |key, value| [key.humanize, key] }, property.availability_status),
                      {},
                      { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", properties_path, 
                class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition duration-200" %>
    
    <%= form.submit class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200" %>
  </div>
<% end %>