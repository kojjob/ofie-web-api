<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Add New Property</h1>
        <p class="mt-2 text-gray-600">List your property for rent and reach potential tenants.</p>
      </div>
      
      <%= link_to properties_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Properties
      <% end %>
    </div>
  </div>

  <!-- Form -->
  <%= render 'form', property: @property %>
</div>