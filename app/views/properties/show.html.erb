            <p class="mt-2 text-gray-600">Photos will be displayed here once uploaded.</p>
          </div>
        <% end %>
      </div>
      
      <!-- Reviews Tab -->
      <div id="reviews-tab" class="tab-content hidden" data-tabs-target="content">
        <%= render 'property_reviews/reviews_section', property: @property %>
      </div>
    </div>
