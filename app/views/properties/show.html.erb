<% content_for :title, "#{@property.title} - Ofie" %>
<% content_for :meta_description, truncate(@property.description, length: 160) %>

<!-- 2025 Professional Property Show Page -->
<div class="min-h-screen bg-neutral-50" data-controller="properties--show" data-properties--show-property-id-value="<%= @property.id %>">
  
  <!-- Hero Section -->
  <section class="relative">
    <%= render 'hero_gallery' %>
  </section>

  <!-- Main Container -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Property Header Strip -->
    <div class="relative z-10 mb-12 -mt-4">
      <div class="bg-white border border-gray-200 shadow-sm rounded-lg p-6 mx-4">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
          <!-- Property Title & Location -->
          <div class="flex-1">
            <div class="flex items-start justify-between mb-4">
              <div>
                <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-2">
                  <%= @property.title %>
                </h1>
                <div class="flex items-center text-gray-600">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="text-lg"><%= @property.address %>, <%= @property.city %></span>
                </div>
              </div>
            </div>
            
            <!-- Property Stats -->
            <div class="flex items-center space-x-8">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                <span class="text-gray-900 font-semibold"><%= @property.bedrooms %></span>
                <span class="text-gray-600 ml-1">bed<%= @property.bedrooms == 1 ? '' : 's' %></span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-900 font-semibold"><%= @property.bathrooms %></span>
                <span class="text-gray-600 ml-1">bath<%= @property.bathrooms == 1 ? '' : 's' %></span>
              </div>
              <% if @property.square_feet %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-900 font-semibold"><%= number_with_delimiter(@property.square_feet) %></span>
                  <span class="text-gray-600 ml-1">sq ft</span>
                </div>
              <% end %>
            </div>
          </div>
          
          <!-- Price & Quick Actions -->
          <div class="lg:text-right">
            <div class="text-4xl font-bold text-gray-900 mb-2">
              $<%= number_with_delimiter(@property.price) %>
              <span class="text-lg font-medium text-gray-600">/month</span>
            </div>
            <div class="flex lg:justify-end space-x-3">
              <% if user_signed_in? %>
                <button data-action="click->properties--show#toggleFavorite" 
                        class="p-2 border border-gray-300 rounded-lg hover:border-gray-400 transition-colors duration-200">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </button>
              <% end %>
              <button data-action="click->properties--show#shareProperty" 
                      class="p-2 border border-gray-300 rounded-lg hover:border-gray-400 transition-colors duration-200">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8 pb-16">
      
      <!-- Primary Content Area (2/3 width) -->
      <div class="xl:col-span-2 space-y-8">
        
        <!-- Property Description -->
        <section class="bg-white border border-gray-200 rounded-lg">
          <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-900">About this property</h2>
          </div>
          <div class="p-6">
            <%= render 'property_description' %>
          </div>
        </section>

        <!-- Amenities Grid -->
        <section class="bg-white border border-gray-200 rounded-lg">
          <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-900">Amenities</h2>
          </div>
          <div class="p-6">
            <%= render 'amenities_section' %>
          </div>
        </section>

        <!-- Location & Map -->
        <section class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-900">Location</h2>
          </div>
          <%= render 'map' %>
        </section>
        
        <!-- Reviews -->
        <section class="bg-white border border-gray-200 rounded-lg">
          <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-900">Reviews</h2>
          </div>
          <div class="p-6">
            <%= render 'reviews_section' %>
          </div>
        </section>

        <!-- Comments -->
        <section class="bg-white border border-gray-200 rounded-lg">
          <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-900">Comments</h2>
          </div>
          <%= render 'property_comments/comments_section' %>
        </section>
      </div>
      
      <!-- Sidebar (1/3 width) -->
      <div class="xl:col-span-1">
        <div class="sticky top-6 space-y-6">
          
          <!-- Booking Card -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
            <div class="p-4 bg-blue-50 border-b border-gray-100">
              <h3 class="font-semibold text-gray-900">Reserve your stay</h3>
            </div>
            <%= render 'booking_card' %>
          </div>
          
          <!-- Host Information -->
          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h3 class="font-semibold text-gray-900 mb-4">Host information</h3>
            <%= render 'host_information' %>
          </div>
          
          <!-- Property Details -->
          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h3 class="font-semibold text-gray-900 mb-4">Property details</h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Property type</span>
                <span class="text-gray-900 font-medium"><%= @property.property_type&.humanize || 'Property' %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Availability</span>
                <span class="text-gray-900 font-medium">
                  <%= @property.availability_status&.humanize || 'Available' %>
                </span>
              </div>

            </div>
          </div>
          
          <!-- House Rules -->
          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h3 class="font-semibold text-gray-900 mb-4">House rules</h3>
            <%= render 'house_rules' %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Related Properties -->
    <section class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Similar properties</h2>
      <%= render 'related_properties' %>
    </section>
  </div>
</div>

<!-- Scheduling Modal -->
<%= render 'scheduling_modal' %>
