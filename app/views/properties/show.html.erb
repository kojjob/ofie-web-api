<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to properties_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Properties
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <!-- Property Images -->
      <div class="mb-8">
        <% if @property.photos.attached? %>
          <div data-controller="image-gallery" class="space-y-4">
            <!-- Main Image -->
            <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden">
              <%= image_tag @property.photos.first, 
                            class: "w-full h-96 object-cover", 
                            data: { "image-gallery-target": "mainImage" } %>
            </div>
            
            <!-- Thumbnail Images -->
            <% if @property.photos.count > 1 %>
              <div class="grid grid-cols-4 gap-2">
                <% @property.photos.each_with_index do |photo, index| %>
                  <button type="button" 
                          class="aspect-w-4 aspect-h-3 rounded-lg overflow-hidden hover:opacity-75 transition duration-200"
                          data-action="click->image-gallery#selectImage"
                          data-image-url="<%= url_for(photo) %>"
                          data-index="<%= index %>">
                    <%= image_tag photo, class: "w-full h-20 object-cover" %>
                  </button>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <!-- Placeholder Image -->
          <div class="w-full h-96 bg-gray-200 rounded-lg flex items-center justify-center">
            <svg class="w-24 h-24 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
            </svg>
          </div>
        <% end %>
      </div>

      <!-- Property Details -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @property.title %></h1>
            <p class="text-lg text-gray-600">
              <%= @property.address %>, <%= @property.city %>, <%= @property.state %> <%= @property.zip_code %>
            </p>
          </div>
          
          <div class="text-right">
            <div class="text-3xl font-bold text-blue-600">
              $<%= number_with_delimiter(@property.price) %>
              <span class="text-lg font-normal text-gray-600">/month</span>
            </div>
            
            <% if @property.available? %>
              <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium mt-2">
                Available
              </span>
            <% else %>
              <span class="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium mt-2">
                Rented
              </span>
            <% end %>
          </div>
        </div>

        <!-- Property Features -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 py-6 border-t border-b border-gray-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-gray-900"><%= @property.bedrooms == 0 ? 'Studio' : @property.bedrooms %></div>
            <div class="text-sm text-gray-600">Bedroom<%= @property.bedrooms != 1 ? 's' : '' %></div>
          </div>
          
          <div class="text-center">
            <div class="text-2xl font-bold text-gray-900"><%= @property.bathrooms %></div>
            <div class="text-sm text-gray-600">Bathroom<%= @property.bathrooms != 1 ? 's' : '' %></div>
          </div>
          
          <% if @property.square_feet %>
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@property.square_feet) %></div>
              <div class="text-sm text-gray-600">Sq Ft</div>
            </div>
          <% end %>
          
          <div class="text-center">
            <div class="text-2xl font-bold text-gray-900 capitalize"><%= @property.property_type %></div>
            <div class="text-sm text-gray-600">Type</div>
          </div>
        </div>

        <!-- Description -->
        <div class="mt-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-3">Description</h2>
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@property.description) %></p>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <!-- Contact Information -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Contact Landlord</h2>
        
        <div class="space-y-3">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-gray-700">Landlord</span>
          </div>
          
          <div class="flex items-center">
            <svg class="w-5 h-5 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <span class="text-gray-700"><%= @property.user.email %></span>
          </div>
        </div>
        
        <% if @property.available? %>
          <div class="mt-6 space-y-3">
            <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-200">
              Send Message
            </button>
            
            <button class="w-full border border-blue-600 text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-50 transition duration-200">
              Schedule Viewing
            </button>
          </div>
        <% end %>
      </div>

      <!-- Property Stats -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Property Details</h2>
        
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Property Type</span>
            <span class="text-gray-900 capitalize"><%= @property.property_type %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-gray-600">City</span>
            <span class="text-gray-900"><%= @property.city %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-gray-600">State</span>
            <span class="text-gray-900"><%= @property.state %></span>
          </div>
          
          <div class="flex justify-between">
            <span class="text-gray-600">ZIP Code</span>
            <span class="text-gray-900"><%= @property.zip_code %></span>
          </div>
          
          <% if @property.square_feet %>
            <div class="flex justify-between">
              <span class="text-gray-600">Square Feet</span>
              <span class="text-gray-900"><%= number_with_delimiter(@property.square_feet) %></span>
            </div>
          <% end %>
          
          <div class="flex justify-between">
            <span class="text-gray-600">Status</span>
            <span class="<%= @property.available? ? 'text-green-600' : 'text-red-600' %>">
              <%= @property.available? ? 'Available' : 'Rented' %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit/Delete Actions for Property Owner -->
  <% if user_signed_in? && current_user == @property.user %>
    <div class="mt-8 flex space-x-4">
      <%= link_to "Edit Property", edit_property_path(@property), 
                  class: "bg-yellow-600 text-white px-6 py-2 rounded-lg hover:bg-yellow-700 transition duration-200" %>
      
      <%= link_to "Delete Property", property_path(@property), 
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this property?" },
                  class: "bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200" %>
    </div>
  <% end %>
</div>