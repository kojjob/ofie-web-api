<div class="min-h-screen bg-gray-50" data-controller="scheduling">
  <!-- Header Navigation -->
  <div class="property-nav bg-white shadow-sm sticky top-0 z-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <%= link_to properties_path, class: "back-btn inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors group" do %>
          <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span class="font-medium">Back to listings</span>
        <% end %>
        
        <!-- Property Actions -->
        <div class="flex items-center space-x-3">
          <% if user_signed_in? %>
            <!-- Favorite Button -->
            <button class="p-2 rounded-full hover:bg-gray-100 transition-colors group" title="Save to favorites">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </button>
            <!-- Share Button -->
            <button class="p-2 rounded-full hover:bg-gray-100 transition-colors group" title="Share property">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
              </svg>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<!-- Breadcrumb Navigation -->
<div class="bg-gray-50 border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex items-center space-x-2 text-sm">
      <%= link_to "Home", root_path, class: "text-gray-500 hover:text-blue-600 transition-colors" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <%= link_to "Properties", properties_path, class: "text-gray-500 hover:text-blue-600 transition-colors" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-900 font-semibold"><%= truncate(@property.title, length: 40) %></span>
    </nav>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Property Header -->
  <div class="mb-8">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
      <!-- Property Title and Info -->
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-4">
          <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
            <%= @property.property_type&.humanize || 'Property' %>
          </span>
          <% if @property.respond_to?(:featured?) && @property.featured? %>
            <span class="bg-gradient-to-r from-orange-500 to-red-500 text-white px-3 py-1 rounded-full text-sm font-bold">
              FEATURED
            </span>
          <% end %>
        </div>
        
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
          <%= @property.title %>
        </h1>
        
        <div class="flex items-center text-gray-600 mb-6">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-lg"><%= @property.address %>, <%= @property.city %></span>
        </div>
        
        <!-- Property Stats -->
        <div class="flex items-center space-x-6 text-gray-700">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
            </svg>
            <span class="font-semibold"><%= @property.bedrooms %> Bedrooms</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
            </svg>
            <span class="font-semibold"><%= @property.bathrooms %> Bathrooms</span>
          </div>
          <% if @property.square_feet %>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-semibold"><%= number_with_delimiter(@property.square_feet) %> sq ft</span>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Price and Actions -->
      <div class="lg:text-right">
        <div class="mb-6">
          <div class="text-4xl lg:text-5xl font-bold text-blue-600 mb-2">
            $<%= number_with_delimiter(@property.price) %>
            <span class="text-lg text-gray-500 font-normal">/month</span>
          </div>
          <div class="flex items-center justify-start lg:justify-end">
            <span class="px-3 py-1 text-sm font-medium rounded-full <%= @property.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @property.availability_status&.humanize || 'Available' %>
            </span>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row lg:flex-col gap-3">
          <% if user_signed_in? && current_user == @property.user %>
            <%= link_to "Edit Property", edit_property_path(@property), 
                        class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 text-center" %>
            <%= link_to "Delete Property", property_path(@property), 
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this property?" },
                        class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 text-center" %>
          <% else %>
            <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200" 
                    data-bs-toggle="modal" data-bs-target="#schedulingModal">
              Schedule Viewing
            </button>
            <div class="flex space-x-2">
              <button class="favorite-btn flex-1 flex items-center justify-center space-x-2 bg-white border-2 border-gray-300 hover:border-red-500 text-gray-700 hover:text-red-500 px-4 py-3 rounded-lg transition-all duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <span>Save</span>
              </button>
              <button class="share-btn flex-1 flex items-center justify-center space-x-2 bg-white border-2 border-gray-300 hover:border-blue-500 text-gray-700 hover:text-blue-500 px-4 py-3 rounded-lg transition-all duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
                <span>Share</span>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- Main Content with Tabs -->
  <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden" data-controller="tabs" data-tabs-active-tab-value="overview">
    <!-- Tab Navigation -->
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8 px-6" aria-label="Tabs">
        <button class="tab-button active border-b-2 border-blue-500 py-4 px-1 text-sm font-medium text-blue-600" data-tab="overview" data-tabs-target="button" data-action="click->tabs#switch">
          Overview
        </button>
        <button class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="details" data-tabs-target="button" data-action="click->tabs#switch">
          Details
        </button>
        <button class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="amenities" data-tabs-target="button" data-action="click->tabs#switch">
          Amenities
        </button>
        <button class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="location" data-tabs-target="button" data-action="click->tabs#switch">
          Location
        </button>
        <button class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="gallery" data-tabs-target="button" data-action="click->tabs#switch">
          Gallery
        </button>
        <button class="tab-button border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="reviews" data-tabs-target="button" data-action="click->tabs#switch">
          Reviews
        </button>
      </nav>
    </div>
    
    <!-- Tab Content -->
    <div class="p-6">
      <!-- Overview Tab -->
      <div id="overview-tab" class="tab-content" data-tabs-target="content">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Left Column - Main Content -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Image Gallery -->
            <div class="" data-controller="gallery">
              <% if @property.photos.attached? && @property.photos.any? %>
                <div class="grid grid-cols-1 gap-4">
                  <!-- Main Image -->
                  <div class="relative">
                    <%= image_tag url_for(@property.photos.first), 
                                  alt: "#{@property.title} - Main Photo",
                                  class: "w-full h-96 object-cover rounded-lg",
                                  data: { gallery_target: "mainImage" } %>
                    <% if @property.photos.count > 1 %>
                      <div class="absolute bottom-4 right-4 bg-black/70 text-white px-3 py-1 rounded-lg text-sm font-medium">
                        +<%= @property.photos.count - 1 %> more photos
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Thumbnail Grid -->
                  <% if @property.photos.count > 1 %>
                    <div class="grid grid-cols-4 gap-2">
                      <% @property.photos.limit(4).each_with_index do |photo, index| %>
                        <div class="relative">
                          <%= image_tag url_for(photo), 
                                        alt: "#{@property.title} - Photo #{index + 1}",
                                        class: "w-full h-20 object-cover rounded-lg cursor-pointer hover:opacity-80 transition-opacity duration-200 #{'ring-2 ring-blue-500 ring-offset-2' if index == 0}",
                                        data: { 
                                          action: "click->gallery#changeMainImage",
                                          gallery_target: "thumbnail",
                                          image_url: url_for(photo)
                                        } %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-12 bg-gray-50 rounded-lg">
                  <svg class="mx-auto h-16 w-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                  </svg>
                  <h3 class="mt-4 text-lg font-medium text-gray-900">No photos available</h3>
                  <p class="mt-2 text-gray-600">Photos will be displayed here once uploaded.</p>
                </div>
              <% end %>
            </div>
            
            <!-- Property Description -->
            <div class="">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Description</h3>
              <div class="prose prose-gray max-w-none">
                <p class="text-gray-700 leading-relaxed"><%= simple_format(@property.description) %></p>
              </div>
            </div>
          </div>
          
          <!-- Right Column - Property Stats -->
          <div class="space-y-6">
            <!-- Quick Stats -->
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-4">Property Details</h3>
              <div class="space-y-4">
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Property Type</span>
                  <span class="font-semibold text-gray-900"><%= @property.property_type&.humanize || 'N/A' %></span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Bedrooms</span>
                  <span class="font-semibold text-gray-900"><%= @property.bedrooms %></span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Bathrooms</span>
                  <span class="font-semibold text-gray-900"><%= @property.bathrooms %></span>
                </div>
                <% if @property.square_feet %>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Square Feet</span>
                    <span class="font-semibold text-gray-900"><%= number_with_delimiter(@property.square_feet) %></span>
                  </div>
                <% end %>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Availability</span>
                  <span class="font-semibold <%= @property.available? ? 'text-green-600' : 'text-red-600' %>">
                    <%= @property.availability_status&.humanize || 'Available' %>
                  </span>
                </div>
              </div>
            </div>
            
            <!-- Contact Card -->
            <div class="bg-blue-50 rounded-lg p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-4">Contact Property Owner</h3>
              <div class="space-y-3">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900"><%= @property.user.name if @property.user.respond_to?(:name) %></div>
                    <div class="text-sm text-gray-600">Property Owner</div>
                  </div>
                </div>
                <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition-colors duration-200">
                  Send Message
                </button>
                <button class="w-full bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 py-2 px-4 rounded-lg font-medium transition-colors duration-200">
                  Call Now
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Details Tab -->
      <div id="details-tab" class="tab-content hidden" data-tabs-target="content">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Property Features</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">Property Type</span>
                <span class="font-semibold"><%= @property.property_type&.humanize || 'N/A' %></span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">Bedrooms</span>
                <span class="font-semibold"><%= @property.bedrooms %></span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">Bathrooms</span>
                <span class="font-semibold"><%= @property.bathrooms %></span>
              </div>
              <% if @property.square_feet %>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Square Feet</span>
                  <span class="font-semibold"><%= number_with_delimiter(@property.square_feet) %></span>
                </div>
              <% end %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="text-gray-600">Availability</span>
                <span class="font-semibold <%= @property.available? ? 'text-green-600' : 'text-red-600' %>">
                  <%= @property.availability_status&.humanize || 'Available' %>
                </span>
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Additional Information</h3>
            <div class="space-y-3">
              <% if @property.respond_to?(:furnished) %>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Furnished</span>
                  <span class="font-semibold"><%= @property.furnished? ? 'Yes' : 'No' %></span>
                </div>
              <% end %>
              <% if @property.respond_to?(:pets_allowed) %>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Pets Allowed</span>
                  <span class="font-semibold"><%= @property.pets_allowed? ? 'Yes' : 'No' %></span>
                </div>
              <% end %>
              <% if @property.respond_to?(:utilities_included) %>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Utilities Included</span>
                  <span class="font-semibold"><%= @property.utilities_included? ? 'Yes' : 'No' %></span>
                </div>
              <% end %>
              <% if @property.respond_to?(:parking_available) %>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Parking Available</span>
                  <span class="font-semibold"><%= @property.parking_available? ? 'Yes' : 'No' %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Amenities Tab -->
      <div id="amenities-tab" class="tab-content hidden" data-tabs-target="content">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Property Amenities</h3>
        <% if @property.amenities_list.present? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @property.amenities_list.each do |amenity| %>
              <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700 font-medium"><%= amenity %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-900">No amenities listed</h3>
            <p class="mt-2 text-gray-600">No specific amenities have been listed for this property.</p>
          </div>
        <% end %>
      </div>
      
      <!-- Location Tab -->
      <div id="location-tab" class="tab-content hidden" data-tabs-target="content">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Location & Map</h3>
        <div class="space-y-6">
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-blue-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1">Address</h4>
                <p class="text-gray-700"><%= @property.address %></p>
                <p class="text-gray-700"><%= @property.city %></p>
              </div>
            </div>
          </div>
          
          <!-- Map placeholder -->
          <div class="bg-gray-100 rounded-lg h-96 flex items-center justify-center">
            <div class="text-center">
              <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              <h3 class="mt-4 text-lg font-medium text-gray-900">Interactive Map</h3>
              <p class="mt-2 text-gray-600">Map integration coming soon</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Gallery Tab -->
      <div id="gallery-tab" class="tab-content hidden" data-tabs-target="content">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Photo Gallery</h3>
        <% if @property.photos.attached? && @property.photos.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @property.photos.each_with_index do |photo, index| %>
              <div class="relative">
                <%= image_tag url_for(photo), 
                              alt: "#{@property.title} - Photo #{index + 1}",
                              class: "w-full h-64 object-cover rounded-lg" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
