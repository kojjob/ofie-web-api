<div class="min-h-screen bg-gray-50" data-controller="scheduling">
  <!-- Modern Header Navigation -->
  <div class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <%= link_to properties_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors group" do %>
          <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <span class="font-medium">All properties</span>
        <% end %>
        
        <div class="flex items-center space-x-3">
          <% if user_signed_in? %>
            <button class="p-2 rounded-full hover:bg-gray-100 transition-colors group" title="Save to favorites">
              <svg class="w-5 h-5 text-gray-400 group-hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </button>
            <button class="p-2 rounded-full hover:bg-gray-100 transition-colors group" title="Share property">
              <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
              </svg>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Hero Section with Image Gallery -->
  <div class="relative">
    <% if @property.photos.attached? && @property.photos.any? %>
      <div class="grid grid-cols-4 gap-2 h-96 md:h-[500px]" data-controller="gallery">
        <!-- Main Image -->
        <div class="col-span-4 md:col-span-2 relative overflow-hidden rounded-l-xl">
          <%= image_tag url_for(@property.photos.first), 
                        alt: "#{@property.title} - Main Photo",
                        class: "w-full h-full object-cover cursor-pointer hover:scale-105 transition-transform duration-300",
                        data: { gallery_target: "mainImage" } %>
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
        
        <!-- Side Images -->
        <div class="col-span-4 md:col-span-2 grid grid-cols-2 gap-2">
          <% @property.photos.limit(4).drop(1).each_with_index do |photo, index| %>
            <div class="relative overflow-hidden <%= 'rounded-tr-xl' if index == 0 %> <%= 'rounded-br-xl' if index == 2 %>">
              <%= image_tag url_for(photo), 
                            alt: "#{@property.title} - Photo #{index + 2}",
                            class: "w-full h-full object-cover cursor-pointer hover:scale-105 transition-transform duration-300",
                            data: { 
                              action: "click->gallery#changeMainImage",
                              gallery_target: "thumbnail",
                              image_url: url_for(photo)
                            } %>
              <% if index == 2 && @property.photos.count > 4 %>
                <div class="absolute inset-0 bg-black/60 flex items-center justify-center">
                  <span class="text-white font-semibold text-lg">+<%= @property.photos.count - 4 %> more</span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="h-96 md:h-[500px] bg-gray-200 flex items-center justify-center rounded-xl">
        <div class="text-center">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
          </svg>
          <p class="mt-4 text-gray-500">No photos available</p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Property Details -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Property Header -->
        <div>
          <div class="flex items-center gap-3 mb-4">
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
              <%= @property.property_type&.humanize || 'Property' %>
            </span>
            <% if @property.respond_to?(:featured?) && @property.featured? %>
              <span class="bg-gradient-to-r from-orange-500 to-red-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                FEATURED
              </span>
            <% end %>
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            <%= @property.title %>
          </h1>
          
          <div class="flex items-center text-gray-600 mb-6">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-lg"><%= @property.address %>, <%= @property.city %></span>
          </div>
          
          <!-- Property Stats -->
          <div class="flex flex-wrap gap-6 text-gray-700">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
              <span class="font-semibold"><%= @property.bedrooms %> bedrooms</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-semibold"><%= @property.bathrooms %> bathrooms</span>
            </div>
            <% if @property.square_feet %>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="font-semibold"><%= number_with_delimiter(@property.square_feet) %> sq ft</span>
              </div>
            <% end %>
        </div>
        
        <!-- Property Description -->
        <div class="border-t pt-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">About this place</h2>
          <div class="prose prose-gray max-w-none">
            <p class="text-gray-700 leading-relaxed text-lg"><%= simple_format(@property.description) %></p>
          </div>
        </div>
        
        <!-- What this place offers -->
        <div class="border-t pt-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">What this place offers</h2>
          <% if @property.amenities_list.present? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @property.amenities_list.each do |amenity| %>
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700"><%= amenity %></span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No specific amenities listed for this property.</p>
          <% end %>
        </div>
      </div>
      
      <!-- Right Column - Booking Card -->
      <div class="lg:col-span-1">
        <div class="sticky top-24">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6">
            <!-- Price -->
            <div class="mb-6">
              <div class="flex items-baseline">
                <span class="text-3xl font-bold text-gray-900">$<%= number_with_delimiter(@property.price) %></span>
                <span class="text-gray-500 ml-1">/month</span>
              </div>
              <div class="mt-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @property.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @property.availability_status&.humanize || 'Available' %>
                </span>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="space-y-3">
              <% if user_signed_in? && current_user == @property.user %>
                <%= link_to "Edit Property", edit_property_path(@property), 
                            class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-semibold transition-colors duration-200 text-center block" %>
                <%= link_to "Delete Property", property_path(@property), 
                            method: :delete,
                            data: { confirm: "Are you sure you want to delete this property?" },
                            class: "w-full bg-red-600 hover:bg-red-700 text-white py-3 px-4 rounded-lg font-semibold transition-colors duration-200 text-center block" %>
              <% else %>
                <button class="w-full bg-gradient-to-r from-pink-500 to-red-500 hover:from-pink-600 hover:to-red-600 text-white py-3 px-4 rounded-lg font-semibold transition-all duration-200 transform hover:scale-105" 
                        data-action="click->scheduling#openModal">
                  Reserve
                </button>
                <div class="grid grid-cols-2 gap-3">
                  <button class="flex items-center justify-center space-x-2 bg-white border border-gray-300 hover:border-gray-400 text-gray-700 py-2 px-3 rounded-lg transition-all duration-200"
                          data-controller="favorites"
                          data-action="click->favorites#toggle"
                          data-property-id="<%= @property.id %>">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    <span class="text-sm">Save</span>
                  </button>
                  <button class="flex items-center justify-center space-x-2 bg-white border border-gray-300 hover:border-gray-400 text-gray-700 py-2 px-3 rounded-lg transition-all duration-200"
                          data-controller="share"
                          data-action="click->share#openModal"
                          data-property-url="<%= property_url(@property) %>"
                          data-property-title="<%= @property.title %>">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                    </svg>
                    <span class="text-sm">Share</span>
                  </button>
                </div>
              <% end %>
            </div>
            
            <!-- Property Details -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Property details</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600">Property type</span>
                  <span class="font-medium"><%= @property.property_type&.humanize || 'N/A' %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Bedrooms</span>
                  <span class="font-medium"><%= @property.bedrooms %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Bathrooms</span>
                  <span class="font-medium"><%= @property.bathrooms %></span>
                </div>
                <% if @property.square_feet %>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Square feet</span>
                    <span class="font-medium"><%= number_with_delimiter(@property.square_feet) %></span>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- Host Information -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Hosted by <%= @property.user.name if @property.user.respond_to?(:name) %></h3>
              <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                  <span class="text-white font-semibold text-lg"><%= @property.user.name&.first if @property.user.respond_to?(:name) %></span>
                </div>
                <div>
                  <div class="font-medium text-gray-900"><%= @property.user.name if @property.user.respond_to?(:name) %></div>
                  <div class="text-sm text-gray-500">Host</div>
                </div>
              </div>
              <div class="mt-4 space-y-2">
                <button class="w-full bg-white border border-gray-300 hover:border-gray-400 text-gray-700 py-2 px-4 rounded-lg font-medium transition-colors duration-200"
                        data-controller="messaging"
                        data-action="click->messaging#openModal"
                        data-property-id="<%= @property.id %>"
                        data-owner-id="<%= @property.user.id %>">
                  Contact host
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Location Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Where you'll be</h2>
        <div class="bg-gray-100 rounded-2xl h-96 flex items-center justify-center mb-6">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-gray-500">Interactive map would be displayed here</p>
          </div>
        </div>
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-gray-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <div class="font-medium text-gray-900"><%= @property.address %></div>
              <div class="text-gray-500">Exact location will be provided after booking confirmation</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Reviews Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-t border-gray-200">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Reviews</h2>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No reviews yet</h3>
          <p class="text-gray-500">Be the first to leave a review for this property!</p>
        </div>
      </div>
    </div>
  </div>

</div>


  </div>
</div>

<!-- Schedule Viewing Modal -->
<%= render 'scheduling_modal' %>