<div class="relative bg-white" 
     data-controller="gallery"
     data-action="mouseenter->gallery#pauseAutoPlay mouseleave->gallery#resumeAutoPlay"
     data-gallery-auto-play-value="false">
  
  <!-- Main Image Container -->
  <div class="aspect-[16/9] lg:aspect-[21/9] relative bg-gray-100 overflow-hidden">
    <% if @property.photos.attached? && @property.photos.any? %>
      <% @property.photos.each_with_index do |image, index| %>
        <div class="<%= index == 0 ? 'block' : 'hidden' %> w-full h-full" 
             data-gallery-target="slide" 
             data-slide-index="<%= index %>">
          <%= image_tag image,
                       class: "w-full h-full object-cover",
                       alt: "#{@property.title} - Image #{index + 1}" %>
        </div>
      <% end %>
    <% else %>
      <!-- No Images State -->
      <div class="w-full h-full bg-gray-100 flex items-center justify-center">
        <div class="text-center text-gray-400">
          <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <p class="text-lg font-medium text-gray-500">No Images Available</p>
        </div>
      </div>
    <% end %>
    
    <!-- Navigation Controls -->
    <% if @property.photos.attached? && @property.photos.any? && @property.photos.count > 1 %>
      <!-- Previous Button -->
      <button class="absolute left-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 hover:bg-white text-gray-700 hover:text-gray-900 rounded-lg border border-white/20 shadow-sm transition-all duration-200 flex items-center justify-center"
              data-action="click->gallery#previousSlide"
              aria-label="Previous image">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <!-- Next Button -->
      <button class="absolute right-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 hover:bg-white text-gray-700 hover:text-gray-900 rounded-lg border border-white/20 shadow-sm transition-all duration-200 flex items-center justify-center"
              data-action="click->gallery#nextSlide"
              aria-label="Next image">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>

      <!-- Image Counter -->
      <div class="absolute bottom-4 right-4 bg-black/70 text-white px-3 py-1 rounded-lg text-sm font-medium">
        <span data-gallery-target="counter">1</span> / <%= @property.photos.count %>
      </div>
    <% end %>

    <!-- Action Buttons -->
    <div class="absolute top-4 right-4 flex space-x-2">
      <% if @property.photos.attached? && @property.photos.any? %>
        <button class="w-10 h-10 bg-white/90 hover:bg-white text-gray-700 hover:text-blue-600 rounded-lg border border-white/20 shadow-sm transition-all duration-200 flex items-center justify-center"
                data-action="click->gallery#openFullscreen"
                aria-label="View fullscreen">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
          </svg>
        </button>
      <% end %>
    </div>
  </div>
  
  <!-- Thumbnail Strip -->
  <% if @property.photos.attached? && @property.photos.any? && @property.photos.count > 1 %>
    <div class="p-4 pb-8 bg-gray-50 border-t border-gray-100 relative z-20">
      <div class="max-w-6xl mx-auto relative z-20">
        <!-- Mobile: Horizontal scroll -->
        <div class="sm:hidden">
          <div class="flex space-x-2 overflow-x-auto pb-2">
            <% @property.photos.first(8).each_with_index do |image, index| %>
              <button type="button"
                      class="flex-shrink-0 w-16 h-12 relative z-30 transition-all duration-200 cursor-pointer"
                      style="border-radius: 6px; border: 2px solid <%= index == 0 ? '#3b82f6' : '#e5e7eb' %>; overflow: hidden;"
                      data-gallery-target="thumbnail"
                      data-action="click->gallery#goToSlide"
                      data-slide-index="<%= index %>"
                      aria-label="View image <%= index + 1 %>"
                      onmouseover="this.style.borderColor='<%= index == 0 ? '#3b82f6' : '#9ca3af' %>'"
                      onmouseout="this.style.borderColor='<%= index == 0 ? '#3b82f6' : '#e5e7eb' %>'">
                <%= image_tag image,
                             class: "w-full h-full object-cover pointer-events-none",
                             style: "border-radius: 4px;",
                             alt: "#{@property.title} - Thumbnail #{index + 1}" %>
              </button>
            <% end %>
          </div>
        </div>

        <!-- Desktop: Centered grid -->
        <div class="hidden sm:flex justify-center flex-wrap gap-2">
          <% @property.photos.first(10).each_with_index do |image, index| %>
            <button type="button"
                    class="w-20 h-16 lg:w-24 lg:h-20 relative z-30 transition-all duration-200 cursor-pointer"
                    style="border-radius: 6px; border: 2px solid <%= index == 0 ? '#3b82f6' : '#e5e7eb' %>; overflow: hidden;"
                    data-gallery-target="thumbnail"
                    data-action="click->gallery#goToSlide"
                    data-slide-index="<%= index %>"
                    aria-label="View image <%= index + 1 %>"
                    onmouseover="this.style.borderColor='<%= index == 0 ? '#3b82f6' : '#9ca3af' %>'"
                    onmouseout="this.style.borderColor='<%= index == 0 ? '#3b82f6' : '#e5e7eb' %>'">
              <%= image_tag image,
                           class: "w-full h-full object-cover pointer-events-none",
                           style: "border-radius: 4px;",
                           alt: "#{@property.title} - Thumbnail #{index + 1}" %>
            </button>
          <% end %>
          
          <!-- Show more button if there are additional photos -->
          <% if @property.photos.count > 10 %>
            <button class="w-20 h-16 lg:w-24 lg:h-20 bg-gray-100 flex items-center justify-center text-gray-600 hover:text-gray-700 transition-all duration-200 relative z-30 cursor-pointer"
                    style="border-radius: 6px; border: 2px solid #e5e7eb; overflow: hidden;"
                    data-action="click->gallery#openFullscreen"
                    onmouseover="this.style.borderColor='#9ca3af'"
                    onmouseout="this.style.borderColor='#e5e7eb'">
              <div class="text-center">
                <div class="text-xs font-medium">+<%= @property.photos.count - 10 %></div>
                <div class="text-xs">more</div>
              </div>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Fullscreen Gallery Modal -->
<%= render 'gallery_fullscreen' if @property.photos.attached? && @property.photos.any? %>
